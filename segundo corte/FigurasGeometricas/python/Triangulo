class  Triangulo:

    def _init_(self,base):
        self.base = base

    def _init_(self,altura):
        self.altura = altura
    
    def hipotenusa(self):
        return ((self.base*2)+(self.altura2))*1/2
    
    def area(self):
        return (self.base * self.altura)/2
    
    def perimetro(self):
        return self.base + self.altura + self.hipotenusa
    
triangulo = Triangulo(12)
print("Area del triangulo: ", Triangulo.area())
print("Perimetro del triangulo: ", Triangulo.perimetro())
